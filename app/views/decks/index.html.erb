<p id="notice"><%= notice %></p>

<div class="pagehead">
  <h1>Decks</h1>
</div>

<div class="Box">
  <div class="Box-header">
    <h3 class="Box-title">
      Title
    </h3>
  </div>
  <% @decks.each do |deck| %>
    <div class="Box-body d-flex">
      <span class="flex-1"><%= deck.title %></span>
      <details class="flex-1">
        <summary>Raw</summary>
        <%= deck.raw %>
      </details>
      <span class="flex-0 px-2"><%= link_to 'Show', deck %></span>
      <span class="flex-0 px-2"><%= link_to 'Edit', edit_deck_path(deck) %></span>
      <span class="flex-0 px-2"><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Deck', new_deck_path %>
